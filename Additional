// Assigning the temperature value in Fahrenheit
let temperature = 75; 
console.log(`The temperature is ${temperature}°F`);

//Converting the temperature to Celsius
let Temperature = 75; 
let celsius = (temperature - 32) * 5 / 9; 
//printing the converted temperature
console.log(`The temperature in Celsius is ${celsius.toFixed(2)}°C`);

let Age = 20;
console.log("my Age : " + Age);

let age = 45; 
let category;

if (age < 18) {
    category = "minor";
} else if (age >= 18 && age < 65) {
    category = "adult";
} else {
    category = "senior citizen";
}

//printing the appropriate message
console.log(`The person is an ${category}.`);
